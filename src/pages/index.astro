---
import Layout from '../layouts/Layout.astro';
import { EmailForm } from '../components/EmailForm';
import DemoScene from '../components/DemoScene';
---

<Layout title='Vertex Void Lab | High-Fidelity 3D Assets'>
	<main class='flex min-h-screen flex-col lg:flex-row overflow-hidden'>
		{/* Hero Section (Left) */}
		<div class='flex flex-1 flex-col justify-center px-8 py-12 lg:px-20 lg:py-0 z-10 relative'>
			<div class='max-w-xl mx-auto lg:mx-0'>
				<h1
					class='text-5xl font-bold tracking-tight text-white sm:text-7xl mb-6 font-display'
				>
					Stop building <br />
					<span
						class='text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-purple-700 animate-gradient-x'
					>
						boring UIs.
					</span>
				</h1>

				<p class='text-lg text-neutral-400 mb-10 leading-relaxed max-w-md'>
					A production-ready, physics-based 3D primitive for React. Interactive.
					Skinnable. Free.
				</p>
				<p class='text-xs font-bold tracking-widest text-gray-500 uppercase mb-3'>
					GET THE SOURCE CODE
				</p>

				<div class='mb-12'>
					<EmailForm client:load />
				</div>
			</div>
		</div>

		{/* 3D Section (Right) */}
		<div class='relative h-[50vh] w-full flex-1 lg:h-screen bg-neutral-950/50'>
			{/* Grid overlay for aesthetic */}
			<div
				class='absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px] [mask-image:linear-gradient(to_right,transparent,white_20%)]'
			>
			</div>

			{/* The 3D Scene */}
			<DemoScene client:only='react' />

			{/* Overlay UI */}
			<div
				class='absolute bottom-8 left-1/2 -translate-x-1/2 text-[17px] font-mono text-purple-500/50 pointer-events-none tracking-widest uppercase'
			>
				[ MOVE YOUR CURSOR TO TILT CARD ]
			</div>
		</div>
	</main>
</Layout>
